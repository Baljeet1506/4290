<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".HomePageRealtor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_picture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/profile_picture"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/name_first"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="@dimen/h2"
            app:layout_constraintBottom_toBottomOf="@+id/user_picture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toEndOf="@+id/user_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.238" />

        <TextView
            android:id="@+id/textLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto"
            android:text="@string/name_last"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="@dimen/h2"
            app:layout_constraintBottom_toBottomOf="@+id/textFirstName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textFirstName"
            app:layout_constraintTop_toTopOf="@+id/textFirstName"
            app:layout_constraintVertical_bias="0.101" />


        <TextView
            android:id="@+id/textRealtorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab"
            android:text="@string/email"
            android:textAlignment="viewStart"
            android:textColor="#6A6A6A"
            android:textSize="@dimen/h4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textRealtorPhone"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab"
            android:text="@string/company"
            android:textAlignment="viewStart"
            android:textSize="@dimen/h4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textFirstName"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textRealtorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab"
            android:text="@string/phone_number"
            android:textAlignment="viewStart"
            android:textSize="@dimen/h4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textCompany"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btnEditRealtorProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto"
            android:minWidth="48dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textLastName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:tint="#BCBCBC" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_section">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="@dimen/spacing_medium">

            <View
                android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnMyListings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/strut"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/my_listings"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="@dimen/card_elevation_small"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:fontFamily="@font/roboto"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/my_listings"
                    android:textAlignment="center"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/icon_listing" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPastSales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/strut"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/past_sales"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="@dimen/card_elevation_small"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:fontFamily="@font/roboto"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/past_sales"
                    android:textAlignment="center"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/icon_past" />
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/btnMyListings"
                android:layout_margin="@dimen/spacing_small"
                android:background="@color/gray" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPreparingToSell"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/strut"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/spacing_small"
                android:layout_below="@id/separator"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/favourites"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="@dimen/card_elevation_small"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/prepare_to_sell"
                    android:textAlignment="center"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_preparing_to_sell" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnListing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/strut"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/spacing_small"
                android:layout_below="@id/separator"
                android:layout_toEndOf="@id/btnPreparingToSell"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/resources"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="@dimen/card_elevation_small"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/listing_homes"
                    android:textAlignment="center"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_listing" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnMarketing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnPreparingToSell"
                android:layout_alignEnd="@id/strut"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/my_listings"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="@dimen/card_elevation_small"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/marketing_the_property"
                    android:textAlignment="center"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_marketing" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnTheOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnPreparingToSell"
                android:layout_alignStart="@id/strut"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/spacing_small"
                android:layout_toEndOf="@id/btnMarketing"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/past_sales"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="@dimen/card_elevation_small"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/the_offer"
                    android:textAlignment="center"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_offer" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_profile_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnMortgageCalculator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnMortgageCalculator"
            app:layout_constraintTop_toTopOf="@+id/btnMortgageCalculator"
            app:srcCompat="@drawable/profile_select" />

        <ImageButton
            android:id="@+id/btnMortgageCalculator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_calculator_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnMyFavourites"
            app:layout_constraintEnd_toStartOf="@+id/btnProfile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnMyFavourites"
            app:layout_constraintTop_toTopOf="@+id/btnMyFavourites"
            app:srcCompat="@drawable/calculator" />

        <ImageButton
            android:id="@+id/btnFindRealtors"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_find_realtors_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnFindProperties"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/realtors" />

        <ImageButton
            android:id="@+id/btnFindProperties"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_find_properties_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnFindRealtors"
            app:layout_constraintEnd_toStartOf="@+id/btnMyFavourites"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnFindRealtors"
            app:layout_constraintTop_toTopOf="@+id/btnFindRealtors"
            app:srcCompat="@drawable/properties" />

        <ImageButton
            android:id="@+id/btnMyFavourites"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_my_favourites_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnFindProperties"
            app:layout_constraintEnd_toStartOf="@+id/btnMortgageCalculator"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnFindProperties"
            app:layout_constraintTop_toTopOf="@+id/btnFindProperties"
            app:srcCompat="@drawable/fav" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>