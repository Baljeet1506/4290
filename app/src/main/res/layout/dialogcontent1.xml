<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rounded_square"
        android:elevation="@dimen/spacing_large">

        <TextView
            android:id="@+id/titleBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="@dimen/h1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/content_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/spacing_medium"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small"
            android:showDividers="middle">

            <EditText
                android:id="@+id/uNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/unit_number"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.008"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.175" />

            <EditText
                android:id="@+id/hNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/house_number"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.962"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.177" />

            <EditText
                android:id="@+id/street"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/street"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.008"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.276" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/city"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.963"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.281" />

            <EditText
                android:id="@+id/province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/province"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.379" />

            <EditText
                android:id="@+id/postal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/postal_code"
                android:importantForAutofill="no"
                android:inputType="textPostalAddress"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.379" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/price"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.483" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:divider="@drawable/spacing_medium"
                android:showDividers="middle">

                <EditText
                    android:id="@+id/beds"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:layout_weight="0.5"
                    android:background="@drawable/shape_rounded_textinput"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="@string/beds"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/baths"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:layout_weight="0.5"
                    android:background="@drawable/shape_rounded_textinput"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="@string/baths"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="@dimen/h3" />


            </LinearLayout>


            <EditText
                android:id="@+id/landSize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/land_size"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6" />

            <EditText
                android:id="@+id/floorSize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/floor_size"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.704" />

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/age"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.703" />

            <EditText
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/type"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.806" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:background="@drawable/shape_rounded_textinput"
                android:ems="10"
                android:fontFamily="@font/roboto_slab"
                android:hint="@string/title"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/h3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.805" />

            <Button
                android:id="@+id/usubmit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/roboto_slab"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Update"
                android:textAllCaps="false"
                android:textSize="@dimen/button_font_size"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

