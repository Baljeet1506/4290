<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape_rounded_top"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_square"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/content_scrolling"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="@dimen/h1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/content_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/spacing_medium"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/a"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/unit_number"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/uNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/unit_number"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/b"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/house_number"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/hNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/house_number"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/c"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/street"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/street"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/d"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/city"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/city"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/e"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/province"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/province"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/province"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/f"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/postal_code"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/postal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/postal_code"
                    android:importantForAutofill="no"
                    android:inputType="textPostalAddress"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/g"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/price"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/price"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/h"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/beds"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/beds"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/beds"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/h1"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/baths"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/baths"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/baths"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/i"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/land_size"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/landSize"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/land_size"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/j"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/floor_size"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/floorSize"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/floor_size"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/k"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/age"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/age"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/m"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/title"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/spinnerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:gravity="center"
                    android:textSize="@dimen/h4"
                    android:hint="@string/title"
                    android:textColorHint="@color/text_dark"
                    android:inputType="textAutoComplete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/l"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/type"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:gravity="center"
                    android:hint="@string/type"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4"
                    android:inputType="textAutoComplete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:text="@string/description"
                    android:textSize="@dimen/h3" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/paragraph_input_height"
                    android:background="@drawable/shape_rounded_text_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/description"
                    android:padding="@dimen/spacing_tiny"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:gravity="top|center"
                    android:textColorHint="@color/text_dark"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <Button
                android:id="@+id/user_submit_dialog_listing"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:background="@drawable/shape_rounded_square"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/roboto"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/button_font_size"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

