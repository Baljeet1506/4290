<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourcesPageViewer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="@dimen/spacing_small">

            <View
                android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPreparingToBuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/strut"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/favourites"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="11dp"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/prepare_to_buy"
                    android:textAlignment="center"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_preparing_to_buy" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnViewProperties"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/strut"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/view_properties"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="11dp"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/view_properties"
                    android:textAlignment="center"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_view_properties" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnFinancePlanning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/strut"
                android:layout_alignParentStart="true"
                android:layout_below="@id/btnViewProperties"
                android:layout_margin="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/resources"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="11dp"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/finance_planning"
                    android:textAlignment="center"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_finance_planning" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btnMakeAnOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnPreparingToBuy"
                android:layout_alignStart="@id/strut"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/past_sales"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="11dp"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/make_an_offer"
                    android:textAlignment="center"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_make_an_offer" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnClosingPurchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnFinancePlanning"
                android:layout_alignEnd="@id/strut"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/spacing_small"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/past_sales"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:typeface="serif"
                app:cardCornerRadius="15dp"
                app:cardElevation="11dp"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/spacing_small"
                    android:fontFamily="@font/roboto_slab"
                    android:scaleX="@dimen/icon_scale"
                    android:scaleY="@dimen/icon_scale"
                    android:text="@string/property_purchased"
                    android:textAlignment="center"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/resource_close_purchase" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_profile_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnMortgageCalculator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/profile_select" />

        <ImageButton
            android:id="@+id/btnMortgageCalculator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_calculator_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnProfile"
            app:layout_constraintEnd_toStartOf="@+id/btnProfile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnFindProperties"
            app:layout_constraintTop_toTopOf="@+id/btnProfile"
            app:srcCompat="@drawable/calculator" />

        <ImageButton
            android:id="@+id/btnFindRealtors"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_find_realtors_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnFindProperties"
            app:layout_constraintEnd_toStartOf="@+id/btnFindProperties"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnFindProperties"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/realtors" />

        <ImageButton
            android:id="@+id/btnFindProperties"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_find_properties_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnMortgageCalculator"
            app:layout_constraintEnd_toStartOf="@+id/btnMortgageCalculator"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnFindRealtors"
            app:layout_constraintTop_toTopOf="@+id/btnMortgageCalculator"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/properties" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_bottom"
        android:elevation="@dimen/spacing_large"
        app:layout_constraintBottom_toTopOf="@+id/content_scrolling"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab"
            android:text="Tips for Viewers"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="@dimen/h1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>