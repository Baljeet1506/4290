<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindRealtor">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="11dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/property_image"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingTop="@dimen/spacing_small"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/spacing_small"
                        app:srcCompat="@drawable/placeholder_user" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/name_first"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/first_name"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/name_last"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first_name"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/company"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/company"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/phone_number"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/phone_number"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/email"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="11dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_image2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/property_image"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingTop="@dimen/spacing_small"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/spacing_small"
                        app:srcCompat="@drawable/placeholder_user" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/first_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/name_first"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/last_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/first_name2"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/name_last"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/company2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first_name2"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/company"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/phone_number2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/company2"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/phone_number"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                        <TextView
                            android:id="@+id/email2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/phone_number2"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/email"
                            android:textAlignment="center"
                            android:textSize="@dimen/h4" />

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/searchFilterBtn"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_circle"
            app:layout_constraintBottom_toBottomOf="@+id/editText"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editText"
            app:layout_constraintVertical_bias="0.666"
            app:srcCompat="@drawable/filter" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_input_height"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_rounded_textinput"
            android:fontFamily="@font/roboto_slab"
            android:hint="@string/search_realtor"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/btnFindRealtors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/searchFilterBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.422" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_profile_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnMortgageCalculator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnMortgageCalculator"
            app:layout_constraintTop_toTopOf="@+id/btnMortgageCalculator"
            app:srcCompat="@drawable/profile" />

        <ImageButton
            android:id="@+id/btnMortgageCalculator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_calculator_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnFindProperties"
            app:layout_constraintEnd_toStartOf="@+id/btnProfile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnFindProperties"
            app:layout_constraintTop_toTopOf="@+id/btnFindProperties"
            app:srcCompat="@drawable/calculator" />

        <ImageButton
            android:id="@+id/btnFindRealtors"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_find_realtors_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnFindProperties"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/realtors_select" />

        <ImageButton
            android:id="@+id/btnFindProperties"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/nav_find_properties_button"
            app:layout_constraintBottom_toBottomOf="@+id/btnFindRealtors"
            app:layout_constraintEnd_toStartOf="@+id/btnMortgageCalculator"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnFindRealtors"
            app:layout_constraintTop_toTopOf="@+id/btnFindRealtors"
            app:srcCompat="@drawable/properties" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



