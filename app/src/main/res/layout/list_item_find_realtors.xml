<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="@dimen/card_elevation_small"
    android:layout_margin="@dimen/spacing_medium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/spacing_small"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/firstname_Text_FindRealtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_toEndOf="@id/user_profile_image"
                android:fontFamily="@font/roboto"
                android:text="@string/name_first"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/lastname_Text_FindRealtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/firstname_Text_FindRealtor"
                android:fontFamily="@font/roboto"
                android:text="@string/name_last"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <ImageView
                android:id="@+id/icon_company"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/lastname_Text_FindRealtor"
                android:layout_alignStart="@+id/firstname_Text_FindRealtor"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/spacing_small"
                android:src="@drawable/company"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/icon_company"
                android:layout_alignStart="@+id/firstname_Text_FindRealtor"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/spacing_small"
                android:src="@drawable/phone"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/icon_phone"
                android:layout_alignStart="@+id/firstname_Text_FindRealtor"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/spacing_small"
                android:src="@drawable/email"
                app:tint="@color/gray" />


            <TextView
                android:id="@+id/company_Text_FindRealtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastname_Text_FindRealtor"
                android:layout_alignTop="@id/icon_company"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/icon_company"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/company"
                android:textColor="#000"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/phoneNumber_Text_FindRealtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/company_Text_FindRealtor"
                android:layout_alignTop="@id/icon_phone"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/phone_number"
                android:textColor="#000"
                android:textSize="@dimen/h5" />

            <!--        <TextView
                android:id="@+id/userType_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneNumber_Text_FindProperties"
                android:layout_toEndOf="@id/email_Text_FindProperties"
                android:fontFamily="@font/roboto_slab"
                android:paddingEnd="10dp"
                android:text="Email"
                android:textColor="#000"
                android:textSize="@dimen/h1"
                 />-->


            <TextView
                android:id="@+id/email_Text_FindRealtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneNumber_Text_FindRealtor"
                android:layout_alignStart="@id/company_Text_FindRealtor"
                android:layout_alignTop="@id/icon_email"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/email"
                android:textColor="#000"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/aboutMe_Text_FindRealtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_Text_FindRealtor"
                android:layout_alignStart="@id/firstname_Text_FindRealtor"
                android:layout_marginTop="@dimen/spacing_small"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/about_me"
                android:textColor="#000"
                android:textSize="@dimen/h5" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

