<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouriteListingDetailView">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/image_slider_favourite"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small">

            <TextView
                android:id="@+id/price_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto"
                android:text="@string/price"
                android:textColor="#000"
                android:textSize="@dimen/h1" />

            <TextView
                android:id="@+id/beds_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:text="#"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <ImageView
                android:id="@+id/bedNumber_Text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h3"
                android:layout_below="@id/price_Text_FindProperties"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@id/beds_Text_FindProperties"
                android:background="#00FFFFFF"
                android:paddingStart="0dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                app:srcCompat="@drawable/bed"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/baths_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_Text_FindProperties"
                android:layout_toEndOf="@id/bedNumber_Text"
                android:fontFamily="@font/roboto"
                android:text="#"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <ImageView
                android:id="@+id/bathNumber_Text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h3"
                android:layout_below="@id/price_Text_FindProperties"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/baths_Text_FindProperties"
                android:background="#00FFFFFF"
                android:paddingStart="0dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                app:srcCompat="@drawable/bath"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/uNum_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beds_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:text="Unit Number"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/hyphen_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beds_Text_FindProperties"
                android:layout_toEndOf="@id/uNum_Text_FindProperties"
                android:fontFamily="@font/roboto_slab"
                android:text=" - "
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/houseNum_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beds_Text_FindProperties"
                android:layout_toEndOf="@id/hyphen_Text"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="House Number"
                android:textColor="#000"
                android:textSize="@dimen/h3" />


            <TextView
                android:id="@+id/street_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beds_Text_FindProperties"
                android:layout_toEndOf="@id/houseNum_Text_FindProperties"
                android:fontFamily="@font/roboto_slab"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Street"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/city_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uNum_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:text="City"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/comma1_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uNum_Text_FindProperties"
                android:layout_toEndOf="@id/city_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text=","
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/province_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uNum_Text_FindProperties"
                android:layout_toEndOf="@id/comma1_Text"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Province"
                android:textColor="#000"
                android:textSize="@dimen/h4" />

            <TextView
                android:id="@+id/postal_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uNum_Text_FindProperties"
                android:layout_toEndOf="@id/province_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Postal"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/landPrefix_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Land:"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/land_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_Text_FindProperties"
                android:layout_toEndOf="@id/landPrefix_Text"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="#"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/floorPrefix_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_Text_FindProperties"
                android:layout_toEndOf="@id/land_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Floor:"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/floor_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_Text_FindProperties"
                android:layout_toEndOf="@id/floorPrefix_Text"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="#"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/age_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/land_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="Age"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/ageSuffix_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/land_Text_FindProperties"
                android:layout_toEndOf="@id/age_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="y.o."
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/title_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/floor_Text_FindProperties"
                android:layout_toEndOf="@id/ageSuffix_Text"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/type_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/land_Text_FindProperties"
                android:layout_toEndOf="@id/title_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Type"
                android:textColor="#000"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/description_Text_FindProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age_Text_FindProperties"
                android:fontFamily="@font/roboto"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Description"
                android:textColor="#000"
                android:textSize="@dimen/h3" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_back_to_find_prop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/back"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/back" />


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider_favourite"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/btn_back_to_find_prop"
            app:iss_auto_cycle="true"
            app:iss_delay="0"
            app:iss_period="1000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>